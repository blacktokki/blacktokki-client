{
  "private": true,
  "name": "@blacktokki/editor",
  "version": "1.0.0",
  "description": "blacktokki editor components for React Native",
  "main": "build/commonjs/index.js",
  "module": "build/module/index.js",
  "types": "build/typescript/index.d.ts",
  "react-native": "src/index.tsx",
  "files": [
    "build",
    "src"
  ],
  "scripts": {
    "build": "bob build",
    "test": "eslint --ext ts,tsx ./src",
    "pretinymce": "copyfiles -u 1 \"node_modules/tinymce/**/*.min.*\" template",
    "tinymce": "copyfiles -u 1 \"template/**/*\""
  },
  "dependencies": {
    "react-native-webview": "^11.26.0",
    "tinymce": "^5.10.7",
    "@tinymce/tinymce-react": "^4.3.0"
  },
  "devDependencies": {
    "@blacktokki/core": "*",
    "@blacktokki/eslint-config": "*",
    "@tsconfig/recommended": "^1.0.1",
    "@types/react-dom": "^18.2.0",
    "react-native-builder-bob": "^0.18.3",
    "typescript": "^5.1.3",
    "copyfiles": "^2.4.1"
  },
  "eslintConfig": {
    "extends": "@blacktokki/eslint-config"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "build",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
